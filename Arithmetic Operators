        // Compound assignment with arithmetic operators 

        int a = 5;
        int b = 20;
        a += 9;
        Console.WriteLine(a);  // output: 14

        a -= 4;
        Console.WriteLine(a);  // output: 10

        a *= 2;
        Console.WriteLine(a);  // output: 20

        a /= 4;
        Console.WriteLine(a);  // output: 5

        a %= 3;
        Console.WriteLine(a);  // output: 2

        a += b;                // output: 22 because the lastest value of a is 2 then we say (+= b), that is mean 2+20 which equals 22. 
        Console.WriteLine(a);
        Console.ReadLine();




        // Remainder operator % :

        /*     Integer remainder For the operands of integer types, the result of ( a % b ) is 
